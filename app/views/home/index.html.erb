<% content_for :head do %>
  <title>ImgBrew DemoApp</title>
	<%= stylesheet_link_tag "home" %>
<% end %>
<div class="content_block">
	<div class="content">
		<% if @image.nil? -%>
			<b>Upload a photo...</b>
